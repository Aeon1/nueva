<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.vive.sinaloa"
    version   = "1.0.0">

<name>Vive Sinaloa</name>

<description>
Guía turística del estado de Sinaloa, México, que contiene información de lugares y actividades que se pueden realizar, en los distintos municipios del estado.
</description>

<author href="" email="joel.r@live.com.mx">
Joel Rivera
</author>
<gap:platforms>
		<gap:platform name="android" minVersion="3.1" />
		<gap:platform name="webos" />
		<gap:platform name="ios" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>
<preference name="splash-screen-duration" value="50000" />
<preference name="load-url-timeout" value="60000" />
<preference name="webviewbounce" value="true" />
 <preference name="orientation" value="portrait" />
 
 <supports-screens
    android:largeScreens="true"
    android:normalScreens="true"
    android:smallScreens="true"
    android:resizeable="true"
    android:anyDensity="true" />

	<icon src="icon.png" gap:role="default" />
	<icon src="icons/vs96px.png" width="96" height="96" />
	<icon src="icons/ios/Icon-72.png" width="72" height="72" />
	<icon src="icons/vs48px.png" width="48" height="48" />
	<icon src="icons/vs36px.png" width="36" height="36" />

	<icon src="icons/ios/Icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/ios/Icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/Icon-57-2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="icons/ios/Icon-72-2x.png" gap:platform="ios" width="144" height="144" />

    <gap:splash src="splash.png" />
	<gap:splash src="splash/android/320x426.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="splash/android/320x470.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="splash/android/480x640.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="splash/android/720x960.png" gap:platform="android" gap:density="xhdpi" />
	
	<gap:splash src="splash/ios/320x480.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/ios/640x960.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="splash/ios/640x1136.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="splash/ios/768x1024.png" gap:platform="ios" width="768" height="1024" />

	<gap:splash src="splash/ios/1496x2048.png" gap:platform="ios" width="1496" height="2048" />
	<gap:splash src="splash/ios/1536x2008.png" gap:platform="ios" width="1536" height="2008" />
	
<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
    <plugin name="Storage" value="org.apache.cordova.Storage" />
    <feature name="http://api.phonegap.com/1.0/file"/>
		<feature name="http://api.phonegap.com/1.0/media"/>
	
	<access origin="*"/>
</widget>
